<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/nliveo_gray" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:textSize="@dimen/default_textSize"
            android:textAllCaps="false"
            android:textColor="@color/nliveo_black"
            android:alpha="0.54"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            fontPath="fonts/Roboto-Medium.ttf"
            android:layout_centerVertical="true" />

    </RelativeLayout>
</LinearLayout><!-- From: file:/Users/Rudsonlive/DevLiveo/AndroidStudio/OpenSource/NavigationDrawer-MaterialDesign/nLiveoDrawer/src/main/res/layout/navigation_list_item_sub_header.xml -->